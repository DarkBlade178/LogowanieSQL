<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ResetPassword">

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_keyboard_backspace_24"
        android:drawablePadding="5dp"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:text="Back" />

    <TextView
        android:id="@+id/resetPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"

        android:fontFamily="@font/poppins_semibold_italic"
        android:gravity="left|top"
        android:text="Reset password"
        android:textColor="@color/colorBlack"
        android:textSize="26sp"
        android:textStyle="" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resetPasswordText"
        android:fontFamily="@font/poppins_italic"
        android:layout_marginTop="-8dp"
        android:layout_marginLeft="10dp"
        android:text="Forgot your password? That's okey, it \nhappens to everyone! \nPlease provide your email to reset your \npassword."
        android:textSize="18sp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:hint="Email"
        android:textColorHint="@color/colorGrey"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="8dp"
        android:background="@drawable/edit_text_border"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/Login"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Email"
        android:layout_centerHorizontal="true"
        android:text="Send Instruction"
        android:background="@drawable/button_border"
        android:layout_marginTop="10dp"
        />



</RelativeLayout>